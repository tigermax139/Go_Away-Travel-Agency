<% include section/header %>
<section class="container-fluid hero">
    <h1 class="company__name page__name">All Tours</h1>
</section>
<section class="container-fluid breadcrumbs">
    <ul class="container breadcrumbs__container">
        <li><a href="/index" class="breadcrumbs__item">Главная</a></li>
        <li><span class="breadcrumbs__item">Все туры</span></li>
    </ul>
</section>
<section class="container-fluid tours">
    <div class="tours__container container">
        <div class="tours__filter">
            <form action="/tours/country" method="get" class="filter__form" name="filterForm">
                <label for="country__list-s" class="filter__label visually-hidden">Далеко собрались?</label>
                <select id="country__list-s" name="c" class="filter__select filter__item" >
                    <option selected>Все страны</option>
                    <optgroup label="Европа">
                        <option value="Германия" >Германия</option>
                        <option value="Франция">Франция</option>
                        <option value="Великобритания">Великобритания</option>
                        <option value="Испания">Испания</option>
                    </optgroup>
                    <optgroup label="Азия">
                        <option value="Турция">Турция</option>
                        <option value="ОАЭ">ОАЭ</option>
                    </optgroup>
                    <optgroup label="Южная Америка">
                        <option value="Парагрвай">Парагрвай</option>
                    </optgroup>
                    <optgroup label="Африка">
                        <option value="Египет">Египет</option>
                    </optgroup>
                </select>
                <input type="submit" value="Найти" class="callback__btn">
            </form>
            <div class="tours__sort">
                    <button class="sort__btn" id="view_short" title="Расположыть туры плиткой">
                        <img src="../img/icons/menu.png" alt="menu-short">
                    </button>
                    <button class="sort__btn" id="view_long" title="Расположыть туры списком">
                        <img src="../img/icons/menu-1.png" alt="menu-long">
                    </button>
            </div>
        </div>
        <div class="tours__items">
            <% tours.forEach((tour, index) => { %>
            <div class="tour tour-features " data-features="<%= tour.tourFeatures %>" data-country="<%= tour.tourCountry %>"
                 data-price="<%= tour.tourPrice %>">
                <div class="tour__visible">
                    <div class="tour__img-container">
                        <img src="../img/country/<%= tour.tourImg %>" alt="<%= tour.tourCountry %>" width="600"
                             height="200" class="tour__img">
                    </div>
                    <div class="tour__title">
                        <div class="tour__country">

                             <b><%= tour.tourName %></b>
                        </div>
                        <div class="tour__price">

                             <b><%= tour.tourPrice %>$ / 7 day</b>
                        </div>
                    </div>

                </div>
                <div class="tour__description">
                    <p>
                        <%= tour.tourDescription %>
                    </p>
                    <a href="/single/<%= tour._id %>" target="_blank" class="callback__btn">Посмотреть тур</a>
                </div>
            </div>
            <% }); %>
        </div>
        <ul class="paginator">
            <% for (var i = 1; i <= maxPage; i++) { %>
                <%if (maxPage != 1) {%>
                    <%if (i === page) {%>
                        <li><a class="paginator__page page-active"><%= i%></a></li>
                    <%} else {%>
                        <li><a href="/tours?p=<%= i%>" class="paginator__page"><%= i%></a></li>
                    <%}%>
                <% } %>
            <% } %>
        </ul>
    </div>
</section>
<script src="../js/tours.js"></script>
<% include section/footer %>